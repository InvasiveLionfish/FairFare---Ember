<div class="col-sm-6 col-sm-offset-3" stye="text-align: center">
<h2>Sign Up</h2>

<form {{action "submit" on="submit"}}>

  <label for="name">Name</label>
  {{input value=user.name placeholder="enter name" class="form-control"}}

  <label for="email">Email</label>
  {{input value=user.email placeholder="enter email" class="form-control"}}

   <label for="description">Description</label>
  {{input value=user.description placeholder="enter description" class="form-control"}}

  <label for="address">Address</label>
  {{input value=user.address placeholder="enter address" class="form-control"}}

  <label for="phoneNumber">Phone Number</label>
  {{input value=user.phoneNumber placeholder="enter phone number" class="form-control"}}

  {{input value="Donor" type="hidden"}}

  <label for="password">Password</label>
  {{input value=user.password type="password" placeholder="enter password" class="form-control my-form"}}

  <label for="passwordConfirmation">Password Confirmation</label>
  {{input value=user.passwordConfirmation type="password" placeholder="enter password again" class="form-control my-form"}}
  <br>
  <button type="submit" class="btn btn-default">Sign Up</button>
</form>

{{error-display errorMessage=errorMessage}}

</div>
{{yield}}
