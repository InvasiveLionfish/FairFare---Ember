<div class="col-sm-6 col-sm-offset-3" stye="text-align: center">
<h2>Add Listing</h2>

<form {{action "submit" on="submit"}}>

  <label for="pickupTime">Pickup Time</label>
  {{bs-datetimepicker date=mydate updateDate=(action (mut listing.pickupTime))}}

  <label for="description">Description</label>
  {{input value=listing.description placeholder="enter description" class="form-control"}}

  <button type="submit" class="btn btn-default">Sign Up</button>
</form>

{{error-display errorMessage=errorMessage}}

</div>
{{yield}}
